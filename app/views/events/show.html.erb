<div class="container">
  <div class="row card-show">
    <div class="col-12">
      <h5 class="text-center text-white" id="event-name" style="text-shadow: 0px 0px 2px rgb(200,200,200);"><%= @event.name %> </h5>
      <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
        <div class="flipper">
          <div class="front">
            <%= render "shared/card_show", event: @event %>
          </div>
          <div class="back">
            <!-- back content -->
            <%= simple_form_for(@event, remote: true) do |f| %>
              <%= f.label :place_name %>
              <%= f.select :place_name, @bar_names %>
              <%= f.input :time, as: :time, minute_step: 30 %>
              <%= f.submit class: "btn btn-primary btn-flip" %>
            <%= link_to "back", event_path, class:"back-link" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12" style="width: 100%;">
      <%= render "shared/chat" %>
    </div>
  </div>
</div>

