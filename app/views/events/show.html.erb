<div class="container">
  <div class="row card-show">
    <div class="col-10 offset-1">
      <h5 class="text-center" id="event-name"><%= @event.name %> </h5>
      <div class="flip-container" ontouchstart="this.classList.toggle('hover');">
        <div class="flipper">
          <div class="front">
            <%= render "shared/card_show", event: @event %>
          </div>
          <div class="back">
            <!-- back content -->
            <%= simple_form_for(@event, remote: true) do |f| %>
              <%= f.input :name %>
              <%= f.label :place_name %>
              <%= f.select :place_name, @bar_names %>
              <%= f.input :time, as: :time, minute_step: 30 %>
              <%= f.submit class: "btn btn-primary btn-flip" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-10 offset-1">
      <%= render "shared/chat" %>
    </div>
  </div>
</div>

