<% @events.each do |event| %>
<% if event.status? %>
<div class="row justify-content-center">
  <div class="col-xs-12">
    <div class="card">
      <img class="card-img img-fluid" src="<%= event.photo_url %>">
      <div class="card-img-overlay">
        <div class="card-category"><%= event.place_name %></div>
        <div class="card-description">
          <%= event.time.strftime('%d-%h | %Hh%Mm') %>
        </div>
        <%= link_to "", event, class: "card-link" %>
      </div>
    </div>
  </div>
</div>
<br>
<% end %>
<% end %>
